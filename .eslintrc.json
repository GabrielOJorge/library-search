{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "jsx-quotes": ["error", "prefer-single"],
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "no-plusplus": "off",
        "jsx-a11y/click-events-have-key-events": false
    }
}
